include mixins.jade

+breadcrumbs('Create Company', 'Help Button', [['home', '/',], [ 'current', page.get_absolute_url]])

section.create-company.container
	//START LEFT BLOCK
	.col-lg-3
		.jumbotron.jumbotron-fluid.row
			.raise-funds
				h4.font-weight-bold.text-uppercase.m-b-0 Raise funds
					.small-text (10% Done)
			#accordion(role="tablist" aria-multiselectable="true")
				.panel.panel-default
					.panel-heading(role="tab")
						a(data-toggle="collapse"
						data-parent="#accordion"
						href="#company"
						aria-expanded="true"
						).list-group-item.active
							i.fa.fa-briefcase
							|  Company
							span.pull-right
								i.fa.fa-angle-down
					#company(role="tabpanel").panel-collapse.collapse.in
						.list-group
							a(href="#").list-group-item.list-group-item-action.active Company
				.panel.panel-default
					.panel-heading(role="tab")
						a(data-toggle="collapse"
						data-parent="#accordion"
						href="#campaign"
						aria-expanded="true"
						).list-group-item
							i.fa.fa-bar-chart
							|  Campaign
							span.pull-right
								i.fa.fa-angle-left
					#campaign(role="tabpanel").panel-collapse.collapse
						.list-group
							a(href="#").list-group-item.list-group-item-action General Information
							a(href="#").list-group-item.list-group-item-action Media
							a(href="#").list-group-item.list-group-item-action Team Members
							a(href="#").list-group-item.list-group-item-action Specifics
							a(href="#").list-group-item.list-group-item-action Perks
				.panel.panel-default
					.panel-heading(role="tab")
						a(data-toggle="collapse"
						data-parent="#accordion"
						href="#form_c"
						aria-expanded="true"
						).list-group-item
							i.fa.fa-university
							|  form c
							span.pull-right
								i.fa.fa-angle-left
					#form_c(role="tabpanel").panel-collapse.collapse
						.list-group
							a(href="#").list-group-item.list-group-item-action form c
		.row
			.education-link-wrap
				.jumbotron.jumbotron-fluid
					h4.font-weight-bold.text-uppercase
						i.fa.fa-book
						|  education Links
					.nav
						li.nav-item
							a(href="#").nav-link.link-3 Issuer Tutorial
						li.nav-item
							a(href="#").nav-link.link-3 Success Guide
						li.nav-item
							a(href="#").nav-link.link-3 What's My Business Worth?
						li.nav-item
							a(href="#").nav-link.link-3 How Much Should I Raise?


	//START RIGHT BLOCK
	.col-lg-8
		h2.text-uppercase.text-lg-center.text-xs-center.m-t-0 Companys
		form(metod="post" action="").form-section
			input(type='hidden' name='state' value='NY' id='state')
			input(type='hidden' name='city' value='New York' id='city')
			+fieldBlock("name", '', {
				class1: 'col-lg-3 col-md-3',
				class2: 'col-lg-9 col-md-9',
				type: 'text',
				placeholder: 'Company Name',
				})
			+fieldBlock("tagline", '', {
				class1: 'col-lg-3 col-md-3',
				class2: 'col-lg-9 col-md-9',
				type: 'text',
				placeholder: 'Your Company Slogan',
				})
			.form-group.row.clearfix
				label.col-lg-3.text-lg-right Description
				.col-lg-9
					textarea(placeholder="Description" rows="4").form-control
			.form-group.row.m-t-2.clearfix
				.col-lg-3.text-lg-right
					label Corporate Structure
				.col-lg-4
					select.custom-select
						option(checked="checked" value="0") C Corporate
				.col-lg-5
					label.date Date of Organization
					input(type="date").form-control
			.border-bottom
			+fieldBlock("address_1", '', {
				class1: 'col-lg-3 col-md-3',
				class2: 'col-lg-9 col-md-9',
				type: 'text',
				})
			+fieldBlock("address_2", '', {
				class1: 'col-lg-3 col-md-3',
				class2: 'col-lg-9 col-md-9',
				type: 'text',
				})
			.row
				.col-lg-7.p-l-2
					+fieldBlock("zip_code", '', {
						class1: 'col-lg-5',
						class2: 'col-lg-7',
						})
				.col-lg-5.city_state
					label.col-lg-6 City/State
					.col-lg-6
						span.change_state_city
							span.input-value New York, NY
								i.fa.fa-pencil-square-o
			.row.m-b-0
				.col-lg-6
					+fieldBlock("phone", '', {
						class1: 'col-lg-6 col-md-3', 
						class2: 'col-lg-6 col-md-9', 
						type: 'text',
						})
				.col-lg-6
					+fieldBlock("website", '', {
						class1: 'col-lg-5 col-md-3', 
						class2: 'col-lg-7 col-md-9', 
						type: 'text',
						placeholder: 'http://www.',
						})
			.border-bottom.m-t-2
			.row.col-l-65.m-b-0
				.col-lg-6
					+fieldBlock("twitter", '', {
						class1: 'col-lg-6 col-md-3', 
						class2: 'col-lg-6 col-md-9', 
						type: 'text',
						})
				.col-lg-6
					+fieldBlock("facebook", '', {
						class1: 'col-lg-5 col-md-3', 
						class2: 'col-lg-7 col-md-9', 
						type: 'text',
						})
			.row.m-b-0.col-l-65
				.col-lg-6.pull-right
					+fieldBlock("instagram", '', {
						class1: 'col-lg-6 col-md-3', 
						class2: 'col-lg-6 col-md-9', 
						type: 'text',
						})
				.col-lg-6.pull-right
					+fieldBlock("linkedin", '', {
						class1: 'col-lg-5 col-md-3', 
						class2: 'col-lg-7 col-md-9', 
						type: 'text',
						})
			.row.m-t-2
				.col-lg-6.pull-right
					.col-lg-6
						button(type="submit").btn.btn-lg.btn-primary.text-uppercase.pull-right save
					.col-lg-6
						a(href="").btn.btn-lg.btn-secondary.text-uppercase preview
