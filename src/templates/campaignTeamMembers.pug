include mixins.pug
include campaignMenu.pug

+breadcrumbs('Create Company', 'Help Button', [['home', '/',], [ 'current', page.get_absolute_url]])

section.create-company-team-add.container
    +menu('team-members')

    //START RIGHT BLOCK
    .col-lg-8
        h2.text-uppercase.text-lg-center.text-xs-center.dosis.m-t-0 team members
        form(metod="post" action="").form-section
            if values.members && values.members.length < 2
                 .form-group.text-lg-center
                    .col-lg-12
                      .campaign-warning.warning-team-add.text-lg-left
                        i.fa.fa-exclamation-triangle 
                        span.warning-text 
                        | Warning! You have to add at least 2 persons for proceed.

            .col-lg-10.offset-lg-1.text-lg-center.m-t-2.m-b-2
                .col-lg-6
                    a(href='/campaign/team_members/' + values.id + '/add/member/new').btn.btn-lg.text-uppercase ADD TEAM MEMBER
                .col-lg-5
                    a(href='/campaign/team_members/' + values.id + '/add/advisor/new').btn.btn-lg.text-uppercase ADD ADVISOR

            if values.members
                - counter = 0
                each v,k in values.members
                    - console.log(v, k);
                    .col-lg-3.m-t-2.p-r-0.p-l-0.m-l-1
                        .team-add-item.text-lg-center.text-xs-center
                            img(src=v.photo alt=v.first_name).img-circle
                            p.name.text-uppercase #{v.first_name} #{v.last_name}
                            p.small #{ v.type }
                            a(href="/campaign/team_members/" + values.id + "/add/" + v.type + '/' + counter).link-1
                                i.fa.fa-pencil-square-o
                    - counter ++
            if values.members && values.members.length >= 2
                .col-lg-8.m-t-3
                      .col-lg-6.p-r-0
                          a(href="/campaign/specifics/" + values.id).btn.btn-lg.text-uppercase Specifics
                      .col-lg-6
                          a(href="/api/campaign/" + values.id target="_blank").btn.btn-lg.btn-secondary.text-uppercase preview
