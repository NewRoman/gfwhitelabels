include mixins.pug

+breadcrumbs('Create campaign', 'LOREM IPSUM DOLOR SIT AMET CONSECTETUR ', [['home', '/',], [ 'current', page.get_absolute_url]])

section.team-members.container.m-b-85
  //START LEFT BLOCK
  .col-lg-3.create_compaign
    .jumbotron.jumbotron-fluid.row
      .raise-funds
        h4.font-weight-bold.text-uppercase.m-b-0 Raise funds
          .small-text (10% Done)
      #accordion(role="tablist" aria-multiselectable="true")
        .panel.panel-default
          .panel-heading(role="tab")
            a(data-toggle="collapse"
            data-parent="#accordion"
            href="#company"
            aria-expanded="true"
            ).list-group-item
              i.fa.fa-briefcase
              |  Company
              span.pull-right
                i.fa.fa-angle-left
          #company(role="tabpanel").panel-collapse.collapse
            .list-group
              a(href="#").list-group-item.list-group-item-action Company
        .panel.panel-default
          .panel-heading(role="tab")
            a(data-toggle="collapse"
            data-parent="#accordion"
            href="#campaign"
            aria-expanded="true"
            ).list-group-item.active
              i.fa.fa-bar-chart
              |  Campaign
              span.pull-right
                i.fa.fa-angle-down
          #campaign(role="tabpanel").panel-collapse.collapse.in
            .list-group
              a(href="#").list-group-item.list-group-item-action General Information
                i.fa.fa-check
              a(href="#").list-group-item.list-group-item-action Media
                i.fa.fa-check
              a(href="#").list-group-item.list-group-item-action.active Team Members
              a(href="#").list-group-item.list-group-item-action Specifics
              a(href="#").list-group-item.list-group-item-action Perks
        .panel.panel-default
          .panel-heading(role="tab")
            a(data-toggle="collapse"
            data-parent="#accordion"
            href="#form_c"
            aria-expanded="true"
            ).list-group-item
              i.fa.fa-university
              |  form c
              span.pull-right
                i.fa.fa-angle-left
          #form_c(role="tabpanel").panel-collapse.collapse
            .list-group
              a(href="#").list-group-item.list-group-item-action form c
    .row
      .education-link-wrap
        .jumbotron.jumbotron-fluid
          h4.font-weight-bold.text-uppercase
            i.fa.fa-book
            |  education Links
          .nav
            li.nav-item
              a(href="#").nav-link.link-3 Issuer Tutorial
            li.nav-item
              a(href="#").nav-link.link-3 Success Guide
            li.nav-item
              a(href="#").nav-link.link-3 What's My Business Worth?
            li.nav-item
              a(href="#").nav-link.link-3 How Much Should I Raise?


  //START RIGHT BLOCK
  .col-lg-8
    h2.text-uppercase.text-lg-center.text-xs-center.dosis.m-t-0 team members (Advisor)

    form(metod="post" action="").form-section
      +fieldBlock("First Name", '', {
        class1: 'col-lg-3 col-md-3',
        class2: 'col-lg-9 col-md-9',
        type: 'text',
        })
      +fieldBlock("Last Name", '', {
        class1: 'col-lg-3 col-md-3',
        class2: 'col-lg-9 col-md-9',
        type: 'text',
        })
      +fieldBlock("E-mail", '', {
        class1: 'col-lg-3 col-md-3',
        class2: 'col-lg-9 col-md-9',
        type: 'email',
        })
      +fieldBlock("Title", '', {
        class1: 'col-lg-3 col-md-3',
        class2: 'col-lg-9 col-md-9',
        type: 'text',
        })
      .form-group.row.clearfix.required
        label.col-lg-3.text-lg-right Bio
        .col-lg-9
          textarea(placeholder="At least 150 characters and no more than 250 characters" rows="4").form-control
      .row
        .col-lg-9.recommended
          +fieldBlock("Where did you grow up?", '', {
            class1: 'col-lg-4 col-md-3',
            class2: 'col-lg-8 col-md-9',
            type: 'text',
            placeholder: 'City'
            })
        .col-lg-3
          select.orderby.custom-select
            option(checked="checked" value="0") ST
            option(value="1") STL
      .row.media-item
        .col-lg-7
          .col-lg-5.p-r-12
            span.pull-right.font-weight-bold  Header Image
          .col-lg-7.text-lg-center
            a(href="").link-1
              p.drop-photo Drop your photo here or click to upload
              i.fa.fa-camera
        .col-lg-5.p-l-1.p-r-3.text-lg-center.text-sm-center
          img(src="/img/header_img_avatar.jpg" alt="Responsive image").img-team-members
      .col-lg-11.pull-right.p-r-0.p-t-2
          .col-lg-6
            button(href="").btn.btn-lg.btn-primary.text-uppercase.pull-right Save and return
          .col-lg-6.p-r-0
            .dropdown.pull-right
              button(href=""
              id="dropdownMenuButton"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
              ).btn.btn-lg.btn-primary.text-uppercase.dropdown-toggle Save and add other
              .dropdown-menu(aria-labelledby="dropdownMenuButton")
                a(href="").dropdown-item Add Advisor
                a(href="").dropdown-item Add Team Member

