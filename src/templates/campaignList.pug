section.small-section.filter
    form(
        action="/campaigns/" 
        method="get" 
        role="form"
    )
        .container
            .row
                .col-lg-3
                    .one_drop
                        select.form-control(multiple="true" title="INDUSTRIES").selectpicker.industry-picker
                            option(value="a_m") Advertising & Marketing
                            option(value="a_f_n_m") Arts, Fashion, & Media
                            option(value="b_to_b") Business to Business
                            option(value="ct") Cleantech
                            option(value="c_n_m") Construction & Manufacturing
                            option(value="c_p") Consumer Products
                            option(value="e_t") Energy/Transport

                .col-lg-3
                    .one_drop
                        select(multiple="true" title="STAGE").form-control.selectpicker.stage-picker
                            option Pre-seed
                            option Seed
                            option Bridge to Series A
                            option Series A
                            option Bridge to Series B
                            option Series B

                .col-lg-3
                    .one_drop
                        select(multiple="true" title="LOCATIONS").form-control.selectpicker.location-picker
                            option Locations
                            option(value="Los Angeles") Los Angeles, CA
                            option(value="San Francisco") San Francisco, CA
                            option(value="New York") New York, NY
                            option(value="Las Vegas") Las Vegas, NV

                .col-lg-3
                    .one_drop
                        select(multiple="true" title="DEAL TYPE").form-control.selectpicker.deal-type-picker
                            option Deal type
                            option(value="Preferred Equity") Preferred Equity
                            option(value="Convertible Note") Convertible Note
                            option(value="Debt") Debt
                            option(value="Revenue Share") Revenue Share

            .create-alert-block
                .row
                    .col-sm-9.col-lg-10
                        a(href="#").pull-right.btn.mr30.text-uppercase.auth-pop create alert

                    .col-sm-3.col-lg-2
                        select.orderby.custom-select
                            option(checked="checked" value="0") Order by
