mixin menu(current)
    .col-lg-3.create_compaign
      .jumbotron.jumbotron-fluid.row
        .raise-funds
          h4.font-weight-bold.text-uppercase.m-b-0 Raise funds
            .small-text (10% Done)
        #accordion(role="tablist" aria-multiselectable="true")
          .panel.panel-default
            .panel-heading(role="tab")
              a(data-toggle="collapse"
              data-parent="#accordion"
              href="#company"
              aria-expanded="true"
              class="list-group-item" + (current == 'company' ? ' active ' : '')
              )
                i.fa.fa-briefcase
                |  Company
                span.pull-right
                  i.fa.fa-angle-left
            #company(role="tabpanel" class="panel-collapse collapse " + (current == 'company' ? 'in' : ''))
              .list-group
                a(href="/company/create" class="list-group-item list-group-item-action " + (current == 'company' ? 'active' : '')) Company
          .panel.panel-default
            .panel-heading(role="tab")
              a(data-toggle="collapse"
              data-parent="#accordion"
              href="#campaign"
              aria-expanded="true"
              class="list-group-item" + (current != 'company' ? ' active ' : '')
              ).list-group-item
                i.fa.fa-bar-chart
                |  Campaign
                span.pull-right
                  i.fa.fa-angle-down
            #campaign(role="tabpanel" class="panel-collapse collapse" + (current != 'company' ? ' in' : ''))
                .list-group
                      a(
                        href="/campaign/general_information/" + values.id 
                        class="list-group-item list-group-item-action " + (current == 'general_information' ? 'active' : '')
                      ) General Information
                          if current == 'general_information'
                              i.fa.fa-check
                      a(
                        href="/campaign/media/" + values.id 
                        class="list-group-item list-group-item-action " + (current == 'media' ? 'active' : '')
                      ) Media
                          if current == 'media'
                              i.fa.fa-check
                      a(
                        href="/campaign/team_members/" + values.id 
                        class="list-group-item list-group-item-action " + (current == 'team-members' ? 'active' : '')
                      ) Team Members
                          if current == 'team-members'
                              i.fa.fa-check
                      a(
                        href="/campaign/specifics/" + values.id 
                        class="list-group-item list-group-item-action " + (current == 'specifics' ? 'active' : '')
                      ) Specifics
                          if current == 'specifics'
                              i.fa.fa-check
                      a(
                        href="/campaign/perks/" + values.id 
                        class="list-group-item list-group-item-action " + (current == 'perks' ? 'active' : '')
                      ) Perks
                          if current == 'perks'
                              i.fa.fa-check
          .panel.panel-default
            .panel-heading(role="tab")
              a(data-toggle="collapse"
              data-parent="#accordion"
              href="#form_c"
              aria-expanded="true"
              ).list-group-item
                i.fa.fa-university
                |  form c
                span.pull-right
                  i.fa.fa-angle-left
            #form_c(role="tabpanel").panel-collapse.collapse
              .list-group
                a(href="#").list-group-item.list-group-item-action form c
      .row
        .education-link-wrap
          .jumbotron.jumbotron-fluid
            h4.font-weight-bold.text-uppercase
              i.fa.fa-book
              |  education Links
            .nav
              li.nav-item
                a(href="#").nav-link.link-3 Issuer Tutorial
              li.nav-item
                a(href="#").nav-link.link-3 Success Guide
              li.nav-item
                a(href="#").nav-link.link-3 What's My Business Worth?
              li.nav-item
                a(href="#").nav-link.link-3 How Much Should I Raise?
